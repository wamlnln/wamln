{
  "name": "honghong.me",
  "private": true,
  "description": "Personal website and blog made using TypeScript, Next.js, Mantine",
  "author": "小康 <info@honghong.me>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "lint:strict": "eslint --max-warnings=0 src",
    "commit": "gitmoji -c",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "type-check": "tsc",
    "prepare": "husky install",
    "analyze": "cross-env ANALYZE=true next build",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "prisma:push": "dotenv -e .env.local -- prisma db push",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.3.6",
    "@emotion/react": "^11.10.4",
    "@emotion/server": "^11.10.0",
    "@giscus/react": "^2.2.0",
    "@mantine/core": "^5.4.2",
    "@mantine/dates": "^5.4.2",
    "@mantine/dropzone": "^5.4.2",
    "@mantine/form": "^5.4.2",
    "@mantine/hooks": "^5.4.2",
    "@mantine/modals": "^5.4.2",
    "@mantine/next": "^5.4.2",
    "@mantine/notifications": "^5.4.2",
    "@mantine/nprogress": "^5.4.2",
    "@mantine/prism": "^5.4.2",
    "@mantine/rte": "^5.4.2",
    "@mantine/spotlight": "^5.4.2",
    "@mdx-js/loader": "^2.1.5",
    "@mdx-js/react": "^2.1.3",
    "@prisma/client": "^4.4.0",
    "@tabler/icons": "^1.101.0",
    "dayjs": "^1.11.5",
    "framer-motion": "^7.5.1",
    "gitmoji-cli": "^7.0.1",
    "googleapis": "^108.0.0",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.0.2",
    "image-size": "^1.0.2",
    "lodash": "^4.17.21",
    "next": "^12.3.1",
    "next-auth": "^4.12.2",
    "next-mdx-remote": "^4.1.0",
    "next-seo": "^5.5.0",
    "next-translate": "^1.6.0",
    "prism-react-renderer": "^1.3.5",
    "prismjs": "^1.29.0",
    "puppeteer": "^18.0.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-katex": "^6.0.2",
    "rehype-mathjax": "^4.0.2",
    "rehype-slug": "5.0.1",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "rss": "^1.2.2",
    "sharp": "^0.31.1",
    "swr": "^1.3.0",
    "tabler-icons-react": "^1.55.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.3.1",
    "@svgr/webpack": "^6.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.7.23",
    "@types/react": "18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/rss": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "eslint": "^8.24.0",
    "eslint-config-next": "^12.3.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "13.0.3",
    "prettier": "^2.7.1",
    "prisma": "^4.4.0",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{json,css,scss,md,mdx}": [
      "prettier -w"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "next",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react/display-name": "off",
      "react/jsx-curly-brace-presence": [
        "warn",
        {
          "props": "never",
          "children": "never"
        }
      ],
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports": "warn",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": [
        "warn",
        {
          "groups": [
            [
              "^@?\\w",
              "^\\u0000"
            ],
            [
              "^.+\\.s?css$"
            ],
            [
              "^@/lib",
              "^@/hooks"
            ],
            [
              "^@/data"
            ],
            [
              "^@/components",
              "^@/container"
            ],
            [
              "^@/store"
            ],
            [
              "^@/"
            ],
            [
              "^\\./?$",
              "^\\.(?!/?$)",
              "^\\.\\./?$",
              "^\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\./\\.\\.(?!/?$)"
            ],
            [
              "^@/types"
            ],
            [
              "^"
            ]
          ]
        }
      ]
    },
    "globals": {
      "React": true,
      "JSX": true
    }
  }
}
